---
import '@styles/global.css';
import '@fontsource-variable/onest';
import { ButtonToTop } from '@components/ButtonToTop';
const { title } = Astro.props
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/logo-argentina.ico" />
		<meta name="description" content="Accede a la GeoArgentina API para obtener información detallada y actualizada sobre provincias, departamentos y localidades del país. Ideal para desarrolladores y programadores que buscan utilizar datos oficiales en sus proyectos, normalizar y georreferenciar información territorial." />
    	<meta name="keywords" content="Argentina, geodatos, provincias, departamentos, localidades, API, georreferenciación, normalización, direcciones, unidades territoriales, desarrolladores, programadores, datos actualizados, Nicolás Tapie" />
		<meta name="author" content="Nicolás Alejandro Tapié">
		<meta name="robots" content="index, follow " />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="dark:bg-gradient-to-b dark:from-[rgba(200,200,200,0)] dark:via-[rgba(120,119,198,0.2)] dark:to-[rgba(255,255,255,0)] bg-gradient-to-b from-[#dedcff] via-[#b6b5cb] to-[#B4C5C5]">
		<div>
			<slot />
			<ButtonToTop />
		</div>	
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		scroll-behavior: smooth;
		font-family: 'Onest Variable', sans-serif;
		overflow-x: hidden;
	}

	div {
		padding: 2rem 0 0 0;
	}

	@media (min-width: 768px) {
		div {
			padding: 2rem 0 0 0;
		}
	}

	


</style>
