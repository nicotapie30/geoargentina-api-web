---
import { CopyButton } from "./CopyButton"
import CopyIcon from "@icons/CopyIcon"

const { lang, src, code } =  Astro.props
---
<article class="w-full 2xl:w-[60%] h-auto bg-white flex flex-col p-2 rounded-lg shadow-lg gap-2 hover:scale-105 transition-transform duration-300 animate-fade-in">
    <div class="flex items-center gap-2">
        <img src={src} alt={lang} class="w-8 h-8">
        <h4 class="text-xl text-gray-800">
        {lang} 
        </h4>
    </div>
    <div class="relative">
        <pre class="bg-gray-900 rounded-lg w-full h-full text-white text-xs xl:text-base font-family-code overflow-x-scroll sm:overflow-hidden">
            <slot />
        </pre>
        <div class="absolute bottom-5 right-3">
            <CopyButton text={code} client:load>
                <CopyIcon />
            </CopyButton>
        </div>
    </div>
</article>
